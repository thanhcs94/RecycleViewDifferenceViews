<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/childpost_container"
        android:minHeight="230dp"
        android:layout_height="230dp">

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/header_noimage"
        android:minHeight="56dp"
        android:visibility="gone"
        android:layout_height="56dp">

    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:orientation="vertical" >

                    <TextView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:emojicon="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvTitle"
                        android:layout_marginTop="4dp"
                        android:text="This is a fucking title"
                        android:textColor="#ff000000"
                        android:paddingRight="8dp"
                        />


                    <TextView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:emojicon="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvDes"
                        android:text="This is a fucking titleThis is a fucking titleThis is a fucking titleThis is a fucking titleThis is a fucking titleThis is a fucking titleThis is a fucking titleThis is a fucking titleThis is a fucking title"
                        android:layout_marginTop="8dp"
                        android:textColor="#ff000000"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        />

                </LinearLayout>

            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:id="@+id/llTime"
                    android:layout_gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    >
                    <ImageView
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:src="@mipmap/ic_launcher"
                        android:id="@+id/imageView6" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvTime"
                        android:text="3d ago"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:paddingLeft="8dp"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:id="@+id/linearLayout">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center_horizontal"
                        android:id="@+id/lllike"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        >
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@mipmap/ic_launcher"
                            android:id="@+id/imgLikeChild" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="300"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:textAllCaps="true"
                            android:paddingLeft="8dp"
                            android:textSize="12sp"
                            android:id="@+id/tvLike" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:id="@+id/llcomment"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@mipmap/ic_launcher"
                            android:id="@+id/imgComment" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="120"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:textAllCaps="true"
                            android:paddingLeft="8dp"
                            android:textSize="12sp"
                            android:id="@+id/tvComment" />

                    </LinearLayout>


                </LinearLayout>
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_height="1dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>